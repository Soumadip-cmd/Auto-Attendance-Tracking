# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/attendance_tracking
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/attendance_tracking?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production-min-32-chars
REFRESH_TOKEN_EXPIRES_IN=7d

# Location Security (for tamper detection)
LOCATION_SIGNATURE_SECRET=your-location-signature-secret-key-min-32-chars

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,exp://localhost:19000,http://localhost:19000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# Data Retention (in days)
LOCATION_HISTORY_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365

# Admin Default User
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin@12345
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Geofencing Configuration (meters)
DEFAULT_GEOFENCE_RADIUS=100
LOCATION_ACCURACY_THRESHOLD=50

# Background Location Configuration
MIN_LOCATION_UPDATE_INTERVAL=300000
MAX_LOCATION_UPDATE_INTERVAL=900000

# Logging
LOG_LEVEL=info
