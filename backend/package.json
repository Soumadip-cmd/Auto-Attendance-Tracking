{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express.js backend for attendance tracking system",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "worker": "node src/jobs/worker.js",
    "worker:dev": "nodemon src/jobs/worker.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "seed:admin": "node src/scripts/seedAdmin.js",
    "cleanup": "node src/scripts/cleanup.js",
    "cleanup:locations": "node src/scripts/cleanup.js locations",
    "cleanup:events": "node src/scripts/cleanup. js events",
    "cleanup: tokens": "node src/scripts/cleanup.js tokens",
    "cleanup:devices": "node src/scripts/cleanup.js devices",
    "import:users": "node src/scripts/bulkImportUsers.js",
    "report:daily": "node src/scripts/generateReport.js daily",
    "report:weekly": "node src/scripts/generateReport.js weekly",
    "report:monthly": "node src/scripts/generateReport.js monthly",
    "report:department": "node src/scripts/generateReport.js department"
  },
  "dependencies": {
    "aws-sdk": "^2.1505.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "fast-csv": "^5.0.1",
    "firebase-admin": "^12.0.0",
    "geolib": "^3.3.4",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.11",
    "pdfkit": "^0.14.0",
    "qrcode": "^1.5.3",
    "redis": "^4.6.11",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.4",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
